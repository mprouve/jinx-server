{
  "name": "jinx-server",
  "version": "1.0.0",
  "description": "Welcome to Jinx, an innovative chat platform designed to conjure up connections across the globe. Our users engage in a daily exercise of wordplay, responding to a push notification with a single word of their choice. Like casting a spell, they're then transported into a chat room with others who thought of the same word.",
  "main": "server.js",
  "private": true,
  "scripts": {
    "build": "node scripts/inc-build.js && npx tsc",
    "format:check": "prettier --check \"src/**/*\"",
    "format:write": "prettier --write \"src/**/*\"",
    "lint:check": "eslint \"src/**/*\"",
    "lint:fix": "eslint --fix \"src/**/*\"",
    "dev": "open-cli http://127.0.0.1:10000 -- 'google chrome' && eval $(grep -v '^#' .env.${ENVIRONMENT} | xargs) npx nodemon src/server.ts",
    "start": "eval $(grep -v '^#' .env.${ENVIRONMENT} | xargs) node dist/server.js",
    "start:app:local": "env-cmd -f .env.local yarn dev",
    "start:app:dev": "env-cmd -f .env.dev yarn dev",
    "start:app:staging": "env-cmd -f .env.staging yarn dev",
    "start:app:prod": "env-cmd -f .env.prod yarn start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mprouve/jinx-server.git"
  },
  "keywords": [],
  "author": {
    "name": "Marco Prouve",
    "email": "me@marcoprouve.com",
    "url": "https://www.marcoprouve.com"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mprouve/jinx-server/issues"
  },
  "homepage": "https://github.com/mprouve/jinx-server#readme",
  "engines": {
    "node": "18.x"
  },
  "dependencies": {
    "body-parser": "^1.20.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "env-cmd": "^10.1.0",
    "express": "^4.18.1",
    "mongodb": "^5.6.0",
    "morgan": "^1.10.0",
    "serve-favicon": "^2.5.0",
    "ts-node": "^10.9.1",
    "winston": "^3.8.1",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.6.5",
    "@types/serve-favicon": "^2.5.3",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "concurrently": "^7.2.2",
    "eslint": "^8.21.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.4",
    "eslint-plugin-promise": "^6.0.0",
    "nodemon": "^2.0.19",
    "open-cli": "^7.0.1",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4"
  }
}
